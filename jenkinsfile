pipeline {
    agent any
    environment {
        AWS_REGION            = 'ap-southeast-2'
        S3_BUCKET             = 'sherry.gamera.com.au'
        S3_PREFIX             = 'my-app'
  }
    
    stages {
        stage('Install packages'){
            steps{
                echo 'Installing npm packages..'
                sh 'npm install'
            }
        }
       
        stage('Test') { 
            steps {
                echo 'Testing...'
                //sh 'npm run test' 
            }
        }
        stage('Build'){
            steps{
                echo 'Building...'
                sh 'npm run build'
            }
        }
        stage('Deployment'){
            steps {
                withCredentials([[
                    credentialsId: 'sherry-aws-credential',
                    accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                    secretKeyVariable: 'AWS_SECRET_ACCESS_KEY'
                ]]) 
                {
                sh 'aws s3 sync build/ s3://${S3_BUCKET}/'
                }
            }
        }
    }
}