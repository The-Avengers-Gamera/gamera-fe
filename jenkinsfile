pipeline {
    agent any
 
    stages {
        stage('say hello'){
            steps{
                echo 'Hello World'
            }
        }
        stage('Install Nodejs'){
            steps{
                echo 'Installing nodejs...'
                sh 'sudo apt update'
                sh 'sudo apt install nodejs'
            }
        }
        /*error message: sudo need password*/

        stage('Install dependencies'){
            steps{
                echo 'Installing npm packages..'
                sh 'npm install'
            }
        }
        /*error message:npm command not found*/
        stage('Test') { 
            steps {
                echo 'Testing...'
                sh 'npm test' 
            }
        }
        stage('Build'){
            steps{
                echo 'Building...'
                sh 'npm run build'
            }
        }
    }
}