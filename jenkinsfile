pipeline {
    agent any
    stages {
        stage('say hello'){
            steps{
                echo 'Hello World'
            }
        }
        stage('Test') { 
            steps {
                echo 'Testing...'
                sh 'sudo npm test' 
            }
        }
        stage('Build'){
            steps{
                echo 'Building'
                sh 'sudo npm run build'
            }
        }
    }
}