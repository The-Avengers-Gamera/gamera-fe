pipeline {
    agent any
    stages {
        stage('say hello'){
            steps{
                echo 'Hello World'
            }
        }
        stage('Install Node.js') {
            steps {
                sh 'sudo apt update'
                sh 'sudo apt install nodejs'
            }
        }
        stage('Install dependencies'){
            steps{
                echo 'Installing npm packages..'
                sh 'npm install'
            }
        }
        stage('Test') { 
            steps {
                echo 'Testing...'
                sh 'npm test' 
            }
        }
        stage('Build'){
            steps{
                echo 'Building'
                sh 'npm run build'
            }
        }
    }
}