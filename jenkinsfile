pipeline {
    agent any
    environment {
        AWS_REGION            = 'ap-southeast-2'
        S3_BUCKET             = 'gamera.com.au'
        /*S3_PREFIX             = 'my-app'*/
    }
    
    stages {
        stage('Install packages'){
            steps{
                echo 'Installing npm packages..'
                sh 'npm install'
            }
        }
       
        stage('Test') { 
            steps {
                echo 'Testing...'
                //sh 'npm run test' 
            }
        }
        stage('Build'){
            steps{
                echo 'Building...'
                sh 'npm run build'
            }
        }
        stage('Deployment'){
            steps {
                sh 'aws s3 rm s3://${S3_BUCKET} --recursive'
                sh 'aws s3 sync build/ s3://${S3_BUCKET}'
            }
        }
    }
}
