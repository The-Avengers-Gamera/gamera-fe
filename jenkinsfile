pipeline {
    agent any
 
    stages {
        stage('say hello'){
            steps{
                echo 'Hello World'
            }
        }

        /*stage('Install dependencies'){
            steps{
                echo 'Installing npm packages..'
                sh 'yarn install'
            }
        }
        error message:npm command not found*/
        stage('Test') { 
            steps {
                echo 'Testing...'
                sh 'yarn test' 
            }
        }
        stage('Build'){
            steps{
                echo 'Building...'
                sh 'yarn run build'
            }
        }
    }
}